mixin header(headerMods, currentUrl)
  -
    const headerLinks = [
      {
        href: "#",
        text: "Подключение"
      },
      {
        href: "#",
        text: "Оплата"
      },
      {
        href: "#",
        text: "Контакты"
      },
      {
        href: "#",
        text: "Выход"
      },
    ]

  header.header(class=headerMods)
    .container
      if(currentUrl === "index.html")
        //- lighthouse снимает 10 баллов SEO за <a> без href
        span.header__logo
          +icon("logo", 55, 40)
          span tocha
      else
        a.header__logo(href="index.html", aria-label="Переход на главную")
          +icon("logo", 55, 40)
          span tocha
      nav.main-nav
        button.main-nav__toggle.btn-reset(type="button", aria-label="Переключатель отображения меню", aria-pressed="false")
          +icon("icon-burger", 20, 20)
        .main-nav__wrapper
          ul.main-nav__list.authorized__nav
            each link in headerLinks
              li.main-nav__item
                a.main-nav__link(href=link.href)=link.text
          ul.main-nav__buttons.not-authorized__nav
            li.main-nav__button
              a.main-nav__entrance(href="#") Вход
            li.main-nav__button
              a.main-nav__registration(href="#") Регистрация
